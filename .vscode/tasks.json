{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "typescript",
            "label": "build tsconfig.json",
            "tsconfig": "tsconfig.json",
            "problemMatcher": [
                "$tsc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "type": "shell",
            "taskName": "Open pb.proto",
            "command": "../shares/pb.proto",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": [
                "$node-sass"
            ]
        },
        {
            "type": "shell",
            "taskName": "Protobufjs",
            "command": "node C:/fox/H5/projects/NodeJsTools/bin/ProtobufJsHelper.js -d ./ -p ../shares/pb.proto -j bin/pb/pb.js -t libs/pb.d.ts",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": [
                "$node-sass"
            ]
        },
        {
            "type": "shell",
            "taskName": "AutoReferencePaths",
            "command": "node C:/fox/H5/projects/NodeJsTools/bin/AutoReferencePath.js -d src -e GameMain.ts Main.ts",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": [
                "$node-sass"
            ]
        },
        {
            "type": "shell",
            "taskName": "example shell",
            "command": "node -v",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        }
    ]
}
